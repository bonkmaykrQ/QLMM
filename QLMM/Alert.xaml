<Window x:Class="QLMM.Alert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLMM"
        mc:Ignorable="d"
        Title="Alert" Height="200" Width="500" WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="NoResize" Icon="qlmm.ico">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF212121" Offset="0"/>
            <GradientStop Color="Black" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="OKButton" Content="OK" Margin="250,0,10,10" Height="20" VerticalAlignment="Bottom" Background="{x:Null}" Foreground="Red" BorderBrush="Red" Click="OKButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" Margin="10,0,250,10" Height="20" VerticalAlignment="Bottom" Background="{x:Null}" Foreground="Red" BorderBrush="Red" Click="CancelButton_Click"/>
        <TextBlock x:Name="AlertBoxMessage" Margin="10,10,10,35" TextWrapping="Wrap" Text="Would you like to delete" Foreground="Yellow" TextAlignment="Center"/>

    </Grid>
</Window>
